@{
    ViewData["Title"] = "Cadastrar Usuário";
    ViewData["BodyClass"] = "bg-fundo";
}

<div class="center-container">
    <div class="form-wrapper">
        <form method="POST" class="styled-form">

                <h1>Cadastrar Usuário</h1>

                    <input id="nome" class="input" placeholder="Nome" name="nome" type="text" required />
                    <input id="cpf" class="input" placeholder="CPF" name="cpf" type="text" required />
                    <input id="telefone" class="input" placeholder="Telefone" name="telefone" type="text" required />
                    <input id="email" class="input" placeholder="Email" name="email" type="email" required />
                    <input id="senh1" class="input" placeholder="Senha" name="senha" type="password" required />
                
                    <button class="button" type="submit">Cadastrar</button>

        </form>
    </div>
</div>

    

    @if (ViewBag.Erro != null)
    {
        <script>
            alert("@ViewBag.Erro");
        </script>
    }

    @if (ViewBag.Sucesso != null)
    {
        <script>
            alert("@ViewBag.Sucesso");
        </script>
    }
</div>



<link rel="stylesheet" href="~/css/cadastrarUsuario.css" />
